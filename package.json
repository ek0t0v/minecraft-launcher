{
    "name": "launcher",
    "version": "0.0.1",
    "description": "",
    "repository": {
        "type" : "git",
        "url" : "git@github.com:seniorcote/launcher.git"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "webpack --config webpack.prod.js",
        "dev": "webpack-dev-server --config webpack.dev.js",
        "package-windows": "electron-packager . launcher --overwrite --platform=win32 --arch=x64 --app-version=0.0.1 --out=release-builds --icon=assets/icons/png/1024x1024.png --prune",
        "package-linux": "electron-packager . launcher --overwrite --platform=linux --arch=x64 --app-version=0.0.1 --out=release-builds --asar=true --icon=assets/icons/png/1024x1024.png --prune",
        "package-mac": "electron-packager . launcher --overwrite --platform=darwin --arch=x64 --app-version=0.0.1 --out=release-builds --icon=assets/icons/mac/icon.icns --prune"
    },
    "author": "dev@seniorcote.com",
    "license": "MIT",
    "devDependencies": {
        "electron": "^4.0.1",
        "@babel/core": "^7.2.2",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.2.3",
        "@fortawesome/fontawesome-free": "^5.6.3",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.4",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "clean-webpack-plugin": "^1.0.0",
        "css-loader": "^2.0.2",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0-beta.3",
        "file-loader": "^3.0.1",
        "less": "^3.0.4",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.4.4",
        "style-loader": "^0.21.0",
        "uglifyjs-webpack-plugin": "^2.1.0",
        "url-loader": "^1.1.2",
        "vue-loader": "^15.2.4",
        "vue-template-compiler": "^2.5.16",
        "webpack": "^4.28.2",
        "webpack-cli": "^3.1.1",
        "webpack-dev-server": "^3.1.9",
        "webpack-merge": "^4.1.4"
    },
    "dependencies": {
        "vue": "^2.5.22",
        "vue-i18n": "^8.7.0",
        "vue-router": "^3.0.2"
    },
    "babel": {
        "presets": [
            "@babel/env"
        ],
        "plugins": [
            "transform-object-rest-spread",
            "@babel/plugin-syntax-dynamic-import"
        ]
    },
    "eslintConfig": {
        "parserOptions": {
            "parser": "babel-eslint",
            "ecmaVersion": 2017,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/recommended"
        ],
        "env": {
            "browser": true,
            "es6": true
        },
        "plugins": [
            "vue"
        ],
        "rules": {
            "indent": [
                "error",
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "vue/html-indent": [
                "error",
                4
            ],
            "vue/script-indent": [
                "error",
                4,
                {
                    "baseIndent": 1,
                    "switchCase": 1
                }
            ],
            "vue/html-self-closing": [
                "error",
                {
                    "html": {
                        "void": "always"
                    }
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "*.vue"
                ],
                "rules": {
                    "indent": "off"
                }
            }
        ]
    }
}
